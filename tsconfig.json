{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 16",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"lib": [
			"es2021"
		],
		"module": "commonjs",
		"target": "es2021",
		"types": ["node"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"resolveJsonModule": true
	}
}